<Window x:Class="EncounterManagerUI.DamageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncounterManagerUI"
        mc:Ignorable="d"
        Title="DamageWindow" Height="120" Width="140">
    <Grid>
        <StackPanel>
            <Label Content="Whats the damage?" HorizontalAlignment="Center" Margin="2"/>
            <TextBox x:Name="txtDamage" Width="100" Margin="2"/>
            <Button Content="OK" Width="100" Margin="2" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
