<Window x:Class="EncounterManagerUI.MonsterInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EncounterManagerUI"
        mc:Ignorable="d"
        Title="MonsterInfoWindow" Height="250" Width="260">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="lstInfo" Grid.Row="1" Grid.Column="1" Margin="2" SelectionChanged="lstInfo_SelectionChanged"/>
        <TextBlock x:Name="lblInfo" Grid.Row="2" Grid.Column="1" Margin="2" TextWrapping="WrapWithOverflow"/>

    </Grid>
</Window>
